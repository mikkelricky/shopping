<form method="post" action="{{ path('shopping_account_list_delete', {account: account.id, id: list.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ list.id) }}">
    <button class="btn btn-danger">{{ 'Delete shopping list {name}'|trans({'name': list.name}) }}</button>
</form>
